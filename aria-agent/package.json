{
  "name": "aria-agent",
  "version": "2.1.0",
  "description": "ARIA - Autonomous Reasoning Intelligence Agent (Standalone)",
  "main": "electron/main.js",
  "type": "module",
  "author": "ARIA Team",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc",
    "build:frontend": "vite build",
    "bundle-server": "node scripts/bundle-server.js",
    "dev": "concurrently -k \"vite\" \"electron .\"",
    "ui": "tsx src/server.ts",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"vite\" \"electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "pack": "npm run build:frontend && npm run bundle-server && electron-builder --dir",
    "dist": "npm run build:frontend && npm run bundle-server && electron-builder",
    "dist:mac": "npm run build:frontend && npm run bundle-server && electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@types/crypto-js": "^4.2.2",
    "@types/node-rsa": "^1.1.4",
    "@types/puppeteer": "^5.4.7",
    "chalk": "^5.3.0",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "express": "^4.18.2",
    "framer-motion": "^12.23.26",
    "jimp": "^1.6.0",
    "lucide-react": "^0.562.0",
    "node-fetch": "^3.3.2",
    "node-llama-cpp": "^3.14.5",
    "node-rsa": "^1.1.1",
    "node-schedule": "^2.1.1",
    "puppeteer": "^24.34.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "readline": "^1.3.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^9.0.1",
    "vectra": "^0.11.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vite": "^7.3.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.aria.agent",
    "productName": "ARIA",
    "copyright": "Copyright ARIA Team",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "resources/models",
        "to": "models",
        "filter": [
          "**/*.gguf"
        ]
      }
    ],
    "files": [
      "electron/**/*",
      "src/**/*",
      "dist/**/*",
      "build/**/*",
      "public/**/*",
      "package.json",
      "tsconfig.json"
    ],
    "asarUnpack": [
      "build/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "dmg": {
      "title": "ARIA",
      "backgroundColor": "#0a0a0f"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
